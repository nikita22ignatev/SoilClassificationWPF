            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="ValueNamesBdr1" BorderBrush="#30363d"
                BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Border Width="440" BorderBrush="#30363d" BorderThickness="0,0,1,0"/>
                    <Border BorderBrush="#30363d" BorderThickness="0,1,1,0"
                            Width="420">
                        <TextBlock Text="Содержание фракций"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                </StackPanel>
            </Border>
            
            <Border x:Name="ValueNamesBdr2" Grid.Row="1" BorderBrush="#30363d"
                BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <Border BorderBrush="#30363d" BorderThickness="1,0,1,0"
                            Width="140">
                        <TextBlock Text="Антопологическое описание"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="H"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="P"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="P(s)"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="W"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="W(l)"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="50">
                        <TextBlock Text="W(p)"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="60">
                        <TextBlock Text="&gt; 2 мм"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="60">
                        <TextBlock Text="2 - 0.5"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="60">
                        <TextBlock Text="0.5 - 0.25"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="60">
                        <TextBlock Text="0.25 - 0.1"
                               Style="{StaticResource ValueNames}"/>
                    </Border>
                    <Border BorderBrush="#30363d" BorderThickness="0,0,1,0"
                            Width="60">
